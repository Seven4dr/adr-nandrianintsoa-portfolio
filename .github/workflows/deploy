name: Deploy static site to Pages

on:
  push:
    branches:
      - main

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # Si tu as un build à faire (React, Vue, Jekyll...), ajoute ici les étapes de build

      - name: Setup Pages
        uses: actions/configure-pages@v5

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: . # Mets ici le dossier à publier (ex: ./dist, ./build, ou .)

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
